<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani_regular"
                android:text="@string/photo"
                android:textColor="@color/grayFont"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        app:cardBackgroundColor="@color/grey_bg"
                        tools:ignore="UnusedAttribute">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_new_car"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:id="@+id/btn_add_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_add_car"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_add_bike" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_add_photo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:src="@drawable/ic_add_photo" />

                            </LinearLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="Brand"
                    android:textColor="@color/grayFont"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_select_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/iv_next_brand"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/select_brand"
                        android:inputType="text"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_next_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/ic_right_arrow" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:visibility="gone"
                        android:id="@+id/spinner_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColorHint="@color/gray_text"
                        android:inputType="none"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_regular"
                        android:adjustViewBounds="true"
                        android:minHeight="52dp"
                        style="@style/SpinnerTheme"
                        android:scaleType="centerInside" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="Type"
                    android:textColor="@color/grayFont"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_select_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/iv_next_type"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/select_type"
                        android:inputType="text"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_next_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/ic_right_arrow" />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:visibility="gone"
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColorHint="@color/gray_text"
                        android:inputType="none"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_regular"
                        android:adjustViewBounds="true"
                        android:minHeight="52dp"
                        style="@style/SpinnerTheme"
                        android:scaleType="centerInside" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayFont"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/no_plate"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_no_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/police_number"
                        android:inputType="text"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/year"
                    android:textColor="@color/grayFont"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/year_production"
                        android:inputType="number"
                        android:maxLength="4"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayFont"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/color"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/car_color"
                        android:inputType="text"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayFont"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/cc"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_cc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/car_cc"
                        android:inputType="number"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_car"
                    android:background="@drawable/background_button_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_14ssp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/rajdhani_medium"
                    android:text="@string/add_car" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>