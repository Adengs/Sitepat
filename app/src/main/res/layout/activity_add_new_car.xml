<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani_regular"
                android:text="@string/photo"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"></TextView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="@color/grayBackground"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="@color/grayBackground"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/iv_mobil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/name"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_car_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/car_name_type_model"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/no_plate"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_no_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/police_number"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/year"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/year_production"
                        android:inputType="number"
                        android:minHeight="52dp"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/color"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/car_color"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/cc"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_cc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:hint="@string/car_cc"
                        android:minHeight="52dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_car"
                    android:background="@drawable/background_button_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_14ssp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/rajdhani_medium"
                    android:text="@string/add_car" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>