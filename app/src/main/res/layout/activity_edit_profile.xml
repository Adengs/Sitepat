<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".page.account.EditProfileActivity">

    <include layout="@layout/toolbar_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profil"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:src="@drawable/ic_profil" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:src="@color/transparent_black" />

                <!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:layout_width="@dimen/_75sdp"-->
<!--                    android:layout_height="@dimen/_75sdp"-->
<!--                    android:scaleType="center"-->
<!--                    android:src="@drawable/ic_camera_add" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/name"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:textStyle="bold"
                        android:hint="@string/name"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/email"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:textStyle="bold"
                        android:hint="@string/email"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/phone"
                    android:textSize="@dimen/_14ssp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rajdhani_regular"
                        android:textStyle="bold"
                        android:hint="@string/phone"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/gender"
                    android:textSize="@dimen/_14ssp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_edittext_grey">

<!--                    <Spinner-->
<!--                        android:id="@+id/spinner_gender"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:padding="@dimen/_10sdp">-->

<!--                    </Spinner>-->

<!--                    <AutoCompleteTextView-->
<!--                        android:layout_width="200dp"-->
<!--                        android:layout_height="30dp"-->
<!--                        android:hint="Select Gender"-->
<!--                        android:id="@+id/acT1"-->
<!--                        android:background="#ffffff"-->
<!--                        android:textAlignment="center"-->
<!--                        android:dropDownHeight="155dp"-->
<!--                        android:cursorVisible="false"-->
<!--                        android:maxLines="1"-->
<!--                        android:focusable="false"-->
<!--                        android:clickable="true"-->
<!--                        android:inputType="none"-->
<!--                        />-->

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/txt_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/rajdhani_regular"
                        android:textStyle="bold"
                        android:hint="@string/gender"
                        android:maxLines="1"
                        android:minHeight="52dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="@dimen/_14ssp" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:text="@string/addresses"
                    android:textSize="@dimen/_14ssp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_addresses"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:background="@drawable/background_button_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_14ssp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/rajdhani_medium"
                    android:text="@string/save" />

            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>