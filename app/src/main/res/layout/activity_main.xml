<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:background="@android:color/black"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/container_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_hi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hi"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/rajdhani_medium"
                            android:textColor="@color/white"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            tools:text="Joni yes papa"
                            android:minLines="1"
                            android:maxLines="1"
                            android:layout_toEndOf="@+id/tv_hi"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/rajdhani_medium"
                            android:textColor="@color/white"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_hello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/starting_maintaining"
                            android:textSize="@dimen/_14ssp"
                            android:layout_below="@+id/tv_hi"
                            android:fontFamily="@font/rajdhani_regular"
                            android:textColor="@color/white"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_notification"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="32dp"
                            android:padding="0dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_bell_on_white"/>

                    </RelativeLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/our_best_promo"
                    android:textSize="@dimen/_16ssp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:fontFamily="@font/rajdhani_medium"
                    android:textColor="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginHorizontal="0dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewpager_promo"
                            android:paddingStart="40dp"
                            android:paddingEnd="40dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_dots"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:visibility="gone"
                        android:id="@+id/tv_see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/rajdhani_regular"
                        android:textColor="@color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/background_btn_half_black"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_homepage"
                android:layout_marginHorizontal="0dp"
                android:orientation="vertical"
                android:layout_below="@id/container_banner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/explore_hire"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/rajdhani_bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_outlet"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/outlet"
                                tools:ignore="TooDeepLayout" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/rajdhani_medium"
                                android:text="@string/outlet"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_car_monitoring"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/carmonitoring"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/rajdhani_medium"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/carmonitoring" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_about"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/about"
                                tools:ignore="TooDeepLayout" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/rajdhani_medium"
                                android:text="@string/about"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_my_account"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/myaccount" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/rajdhani_medium"
                                android:text="@string/myaccount"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_support"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/support"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/rajdhani_medium"
                                android:textSize="@dimen/_12ssp"
                                android:padding="10dp"
                                android:text="@string/support" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_setting"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/setting"
                                tools:ignore="TooDeepLayout" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/rajdhani_medium"
                                android:text="@string/setting"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:text="@string/protection_from_disasters"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="start"
                        android:fontFamily="@font/rajdhani_bold"
                        android:textColor="@color/black"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_article_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

<!--                    <include layout="@layout/item_promo_homepage"/>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/article_home"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="start"
                                android:fontFamily="@font/rajdhani_bold"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_see_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/see_more"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/red_text"
                                tools:ignore="RelativeOverlap" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_article_homepage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/popular_article"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:textSize="@dimen/_14ssp"
                            android:gravity="start"
                            android:fontFamily="@font/rajdhani_bold"
                            android:textColor="@color/black"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_popular_article"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>