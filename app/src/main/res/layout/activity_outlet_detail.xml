<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/toolbar_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/container_outlet_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/container_img_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    android:layout_height="@dimen/_250sdp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_outlet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_260sdp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_name_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_img_outlet"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_outlet_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@id/tv_status_outlet"
                        android:fontFamily="@font/rajdhani_bold"
                        tools:text="Dokter Mobil Bintaro Sektor 3"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_status_outlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/background_outlet_status"
                        android:fontFamily="@font/rajdhani_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:text="Buka"
                        android:textColor="@color/green_text"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:visibility="gone"
                        android:id="@+id/tv_status_outlet_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/red_text"
                        android:text="Tutup"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/background_outlet_status_close"
                        android:fontFamily="@font/rajdhani_bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_below="@+id/container_name_outlet"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_text" />

            <RelativeLayout
                android:id="@+id/container_distance_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:layout_marginHorizontal="20dp">

                <RelativeLayout
                    android:id="@+id/container_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/red_text"
                        android:fontFamily="@font/rajdhani_bold"
                        tools:text="1.0"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/tv_distance"
                        android:textColor="@color/red_text"
                        android:fontFamily="@font/rajdhani_bold"
                        android:text="km"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_from_you"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:layout_toEndOf="@id/tv_km"
                        android:textColor="@color/black_half"
                        android:text="From you"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:fontFamily="@font/rajdhani_regular" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_alamat_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/gray_text"
                    android:layout_marginTop="20dp"
                    tools:text="@string/lorem_ipsum"
                    android:layout_below="@id/container_distance"
                    android:fontFamily="@font/rajdhani_regular" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/btn_reservation"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_btn_reservation">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_action_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_wa"
            android:fontFamily="@font/rajdhani_bold"
            android:textStyle="bold"
            android:text="Reservation"
            android:textColor="@color/black" />
    </FrameLayout>

</RelativeLayout>