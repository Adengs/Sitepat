<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.promo.PromoDetailActivity"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/toolbar_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/container_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/container_img_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    android:layout_height="@dimen/_160sdp"
                    app:cardBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_promo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_btn_white"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_valid_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_img_promo"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rajdhani_bold"
                        android:text="@string/periode_promo"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_periode_promo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grayFont"
                        android:fontFamily="@font/rajdhani_regular" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_detail_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_valid_promo"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rajdhani_bold"
                        android:text="@string/detail_promo"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_detail_promo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/grayFont"
                        android:fontFamily="@font/rajdhani_regular"
                        tools:text="@string/lorem_ipsum"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <include
        layout="@layout/layout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_alignParentEnd="true" />


</RelativeLayout>