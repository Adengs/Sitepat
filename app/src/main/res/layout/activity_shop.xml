            android:fontFamily="@font/rajdhani_bold"
            android:text="@string/product_for_you"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@+id/lay_new_product" />

