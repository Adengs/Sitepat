        <RelativeLayout
            android:id="@+id/lay_new_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_260sdp"
            android:background="@color/orange_background"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
