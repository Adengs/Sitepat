<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    tools:context=".page.service.body_paint.fragment.YourInformationFragmentBody">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani_medium"
                android:text="@string/fullname"
                android:textColor="@color/grey_title"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/background_edittext_grey"
                android:fontFamily="@font/rajdhani_medium"
                android:hint="@string/text_fullname"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/_14sdp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="@string/hp"
                android:textColor="@color/grey_title"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/background_edittext_grey"
                android:fontFamily="@font/rajdhani_medium"
                android:hint="@string/text_hp"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/_14sdp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="@string/email"
                android:textColor="@color/grey_title"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/background_edittext_grey"
                android:fontFamily="@font/rajdhani_medium"
                android:hint="@string/text_email"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/_14sdp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="@string/promo_code"
                android:textColor="@color/grey_title"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_edittext_grey"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/promo_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rajdhani_medium"
                    android:hint="@string/promo_code"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/_14sdp"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_apply_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_bold"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/apply"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/text_apply_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_bold"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/apply"
                    android:textColor="@color/red_text"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>